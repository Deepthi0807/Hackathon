import { useNavigate } from 'react-router';
import { getCurrentUser, setCurrentUser, FACULTY, hasRatedFaculty } from '../utils/auth';
import { Button } from './ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from './ui/card';
import { Badge } from './ui/badge';
import { GraduationCap, LogOut, CheckCircle, Clock } from 'lucide-react';

export function StudentDashboard() {
  const navigate = useNavigate();
  const user = getCurrentUser();

  const handleLogout = () => {
    setCurrentUser(null);
    navigate('/');
  };

  const handleSelectFaculty = (facultyId: string) => {
    if (user && !hasRatedFaculty(user.id, facultyId)) {
      navigate(`/feedback/${facultyId}`);
    }
  };

  if (!user) return null;

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
      <div className="container mx-auto px-4 py-8">
        {/* Header */}
        <div className="flex justify-between items-center mb-8">
          <div className="flex items-center gap-3">
            <div className="bg-indigo-600 p-2 rounded-lg">
              <GraduationCap className="w-6 h-6 text-white" />
            </div>
            <div>
              <h1 className="text-2xl">Faculty Feedback System</h1>
              <p className="text-gray-600">Welcome, {user.username}</p>
            </div>
          </div>
          <Button variant="outline" onClick={handleLogout}>
            <LogOut className="w-4 h-4 mr-2" />
            Logout
          </Button>
        </div>

        {/* Instructions */}
        <Card className="mb-8">
          <CardHeader>
            <CardTitle>Instructions</CardTitle>
            <CardDescription>
              Please select a faculty member below to provide your feedback. You can only submit feedback once per faculty member.
            </CardDescription>
          </CardHeader>
        </Card>

        {/* Faculty Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {FACULTY.map((faculty) => {
            const alreadyRated = hasRatedFaculty(user.id, faculty.id);
            
            return (
              <Card 
                key={faculty.id} 
                className={`transition-all ${
                  alreadyRated 
                    ? 'opacity-60 cursor-not-allowed' 
                    : 'hover:shadow-lg cursor-pointer'
                }`}
                onClick={() => !alreadyRated && handleSelectFaculty(faculty.id)}
              >
                <CardHeader>
                  <div className="flex justify-between items-start mb-2">
                    <CardTitle className="text-lg">{faculty.name}</CardTitle>
                    {alreadyRated ? (
                      <Badge variant="secondary" className="bg-green-100 text-green-700">
                        <CheckCircle className="w-3 h-3 mr-1" />
                        Submitted
                      </Badge>
                    ) : (
                      <Badge variant="secondary" className="bg-amber-100 text-amber-700">
                        <Clock className="w-3 h-3 mr-1" />
                        Pending
                      </Badge>
                    )}
                  </div>
                  <CardDescription>{faculty.department}</CardDescription>
                </CardHeader>
                <CardContent>
                  <p className="text-sm text-gray-600 mb-4">Subject: {faculty.subject}</p>
                  <Button 
                    className="w-full" 
                    disabled={alreadyRated}
                    variant={alreadyRated ? "secondary" : "default"}
                  >
                    {alreadyRated ? 'Feedback Submitted' : 'Provide Feedback'}
                  </Button>
                </CardContent>
              </Card>
            );
          })}
        </div>
      </div>
    </div>
  );
}
