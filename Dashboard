import { useState } from 'react';
import { useNavigate } from 'react-router';
import { setCurrentUser, FACULTY, getAllFeedback } from '../utils/auth';
import { Button } from './ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from './ui/card';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from './ui/select';
import { BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer, PieChart, Pie, Cell, RadarChart, PolarGrid, PolarAngleAxis, PolarRadiusAxis, Radar } from 'recharts';
import { BarChart3, LogOut, Users, FileText } from 'lucide-react';

export function AdminDashboard() {
  const navigate = useNavigate();
  const [selectedFaculty, setSelectedFaculty] = useState<string>('all');
  
  const allFeedback = getAllFeedback();

  const handleLogout = () => {
    setCurrentUser(null);
    navigate('/');
  };

  const filteredFeedback = selectedFaculty === 'all' 
    ? allFeedback 
    : allFeedback.filter(f => f.facultyId === selectedFaculty);

  // Calculate statistics
  const totalResponses = filteredFeedback.length;
  const uniqueStudents = new Set(filteredFeedback.map(f => f.studentId)).size;

  // Calculate average ratings by faculty
  const facultyStats = FACULTY.map(faculty => {
    const facultyFeedback = allFeedback.filter(f => f.facultyId === faculty.id);
    const count = facultyFeedback.length;
    
    if (count === 0) {
      return {
        name: faculty.name.split(' ').slice(-1)[0],
        fullName: faculty.name,
        responses: 0,
        clarity: 0,
        engagement: 0,
        pace: 0,
        interaction: 0,
        confidence: 0,
        overall: 0,
      };
    }

    const avg = {
      clarity: facultyFeedback.reduce((sum, f) => sum + f.clarity, 0) / count,
      engagement: facultyFeedback.reduce((sum, f) => sum + f.engagement, 0) / count,
      pace: facultyFeedback.reduce((sum, f) => sum + f.pace, 0) / count,
      interaction: facultyFeedback.reduce((sum, f) => sum + f.interaction, 0) / count,
      confidence: facultyFeedback.reduce((sum, f) => sum + f.confidenceImprovement, 0) / count,
    };

    const overall = (avg.clarity + avg.engagement + avg.pace + avg.interaction + avg.confidence) / 5;

    return {
      name: faculty.name.split(' ').slice(-1)[0],
      fullName: faculty.name,
      responses: count,
      ...avg,
      overall,
    };
  });

  // Calculate parameter averages for selected faculty/all
  const parameterAverages = filteredFeedback.length > 0 ? {
    clarity: filteredFeedback.reduce((sum, f) => sum + f.clarity, 0) / filteredFeedback.length,
    engagement: filteredFeedback.reduce((sum, f) => sum + f.engagement, 0) / filteredFeedback.length,
    pace: filteredFeedback.reduce((sum, f) => sum + f.pace, 0) / filteredFeedback.length,
    interaction: filteredFeedback.reduce((sum, f) => sum + f.interaction, 0) / filteredFeedback.length,
    confidence: filteredFeedback.reduce((sum, f) => sum + f.confidenceImprovement, 0) / filteredFeedback.length,
  } : null;

  const radarData = parameterAverages ? [
    { parameter: 'Clarity', value: parameterAverages.clarity },
    { parameter: 'Engagement', value: parameterAverages.engagement },
    { parameter: 'Pace', value: parameterAverages.pace },
    { parameter: 'Interaction', value: parameterAverages.interaction },
    { parameter: 'Confidence', value: parameterAverages.confidence },
  ] : [];

  // Rating distribution for pie chart
  const ratingDistribution = filteredFeedback.length > 0 ? [
    { name: 'Excellent (5)', value: 0, color: '#10b981' },
    { name: 'Good (4)', value: 0, color: '#3b82f6' },
    { name: 'Average (3)', value: 0, color: '#f59e0b' },
    { name: 'Below Avg (2)', value: 0, color: '#f97316' },
    { name: 'Poor (1)', value: 0, color: '#ef4444' },
  ] : [];

  filteredFeedback.forEach(feedback => {
    const avgRating = Math.round(
      (feedback.clarity + feedback.engagement + feedback.pace + 
       feedback.interaction + feedback.confidenceImprovement) / 5
    );
    ratingDistribution[5 - avgRating].value++;
  });

  const barChartData = facultyStats.map(stat => ({
    name: stat.name,
    'Overall Rating': Number(stat.overall.toFixed(2)),
    'Response Count': stat.responses,
  }));

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
      <div className="container mx-auto px-4 py-8">
        {/* Header */}
        <div className="flex justify-between items-center mb-8">
          <div className="flex items-center gap-3">
            <div className="bg-indigo-600 p-2 rounded-lg">
              <BarChart3 className="w-6 h-6 text-white" />
            </div>
            <div>
              <h1 className="text-2xl">Admin Dashboard</h1>
              <p className="text-gray-600">Faculty Feedback Analytics</p>
            </div>
          </div>
          <Button variant="outline" onClick={handleLogout}>
            <LogOut className="w-4 h-4 mr-2" />
            Logout
          </Button>
        </div>

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <Card>
            <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
              <CardTitle className="text-sm">Total Responses</CardTitle>
              <FileText className="h-4 w-4 text-gray-500" />
            </CardHeader>
            <CardContent>
              <div className="text-2xl">{totalResponses}</div>
              <p className="text-xs text-gray-500">Anonymous feedback submissions</p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
              <CardTitle className="text-sm">Participating Students</CardTitle>
              <Users className="h-4 w-4 text-gray-500" />
            </CardHeader>
            <CardContent>
              <div className="text-2xl">{uniqueStudents}</div>
              <p className="text-xs text-gray-500">Unique student participants</p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
              <CardTitle className="text-sm">Faculty Members</CardTitle>
              <BarChart3 className="h-4 w-4 text-gray-500" />
            </CardHeader>
            <CardContent>
              <div className="text-2xl">{FACULTY.length}</div>
              <p className="text-xs text-gray-500">Total faculty evaluated</p>
            </CardContent>
          </Card>
        </div>

        {/* Filter */}
        <Card className="mb-8">
          <CardHeader>
            <CardTitle>Filter by Faculty</CardTitle>
            <CardDescription>View analytics for specific faculty or all combined</CardDescription>
          </CardHeader>
          <CardContent>
            <Select value={selectedFaculty} onValueChange={setSelectedFaculty}>
              <SelectTrigger className="w-full md:w-80">
                <SelectValue placeholder="Select faculty" />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="all">All Faculty Members</SelectItem>
                {FACULTY.map(faculty => (
                  <SelectItem key={faculty.id} value={faculty.id}>
                    {faculty.name} - {faculty.subject}
                  </SelectItem>
                ))}
              </SelectContent>
            </Select>
          </CardContent>
        </Card>

        {/* Charts */}
        {totalResponses === 0 ? (
          <Card>
            <CardContent className="py-16 text-center">
              <p className="text-gray-500">No feedback data available yet.</p>
              <p className="text-sm text-gray-400 mt-2">Students need to submit feedback first.</p>
            </CardContent>
          </Card>
        ) : (
          <div className="space-y-8">
            {/* Overall Faculty Performance */}
            <Card>
              <CardHeader>
                <CardTitle>Faculty Performance Overview</CardTitle>
                <CardDescription>Average ratings and response counts by faculty</CardDescription>
              </CardHeader>
              <CardContent>
                <ResponsiveContainer width="100%" height={400}>
                  <BarChart data={barChartData}>
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="name" />
                    <YAxis yAxisId="left" orientation="left" stroke="#8884d8" domain={[0, 5]} />
                    <YAxis yAxisId="right" orientation="right" stroke="#82ca9d" />
                    <Tooltip />
                    <Legend />
                    <Bar yAxisId="left" dataKey="Overall Rating" fill="#8884d8" />
                    <Bar yAxisId="right" dataKey="Response Count" fill="#82ca9d" />
                  </BarChart>
                </ResponsiveContainer>
              </CardContent>
            </Card>

            {/* Parameter Analysis */}
            {filteredFeedback.length > 0 && (
              <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <Card>
                  <CardHeader>
                    <CardTitle>Teaching Parameters Analysis</CardTitle>
                    <CardDescription>
                      {selectedFaculty === 'all' 
                        ? 'Average ratings across all parameters'
                        : `Ratings for ${FACULTY.find(f => f.id === selectedFaculty)?.name}`
                      }
                    </CardDescription>
                  </CardHeader>
                  <CardContent>
                    <ResponsiveContainer width="100%" height={350}>
                      <RadarChart data={radarData}>
                        <PolarGrid />
                        <PolarAngleAxis dataKey="parameter" />
                        <PolarRadiusAxis domain={[0, 5]} />
                        <Radar name="Rating" dataKey="value" stroke="#8884d8" fill="#8884d8" fillOpacity={0.6} />
                        <Tooltip />
                      </RadarChart>
                    </ResponsiveContainer>
                  </CardContent>
                </Card>

                <Card>
                  <CardHeader>
                    <CardTitle>Rating Distribution</CardTitle>
                    <CardDescription>
                      Percentage breakdown of overall ratings
                    </CardDescription>
                  </CardHeader>
                  <CardContent>
                    <ResponsiveContainer width="100%" height={350}>
                      <PieChart>
                        <Pie
                          data={ratingDistribution}
                          cx="50%"
                          cy="50%"
                          labelLine={false}
                          label={({ name, percent }) => 
                            percent > 0 ? `${name}: ${(percent * 100).toFixed(0)}%` : ''
                          }
                          outerRadius={100}
                          fill="#8884d8"
                          dataKey="value"
                        >
                          {ratingDistribution.map((entry, index) => (
                            <Cell key={`cell-${index}`} fill={entry.color} />
                          ))}
                        </Pie>
                        <Tooltip />
                      </PieChart>
                    </ResponsiveContainer>
                  </CardContent>
                </Card>
              </div>
            )}

            {/* Detailed Faculty Stats Table */}
            <Card>
              <CardHeader>
                <CardTitle>Detailed Faculty Statistics</CardTitle>
                <CardDescription>Individual parameter ratings for each faculty member</CardDescription>
              </CardHeader>
              <CardContent>
                <div className="overflow-x-auto">
                  <table className="w-full text-sm">
                    <thead>
                      <tr className="border-b">
                        <th className="text-left p-2">Faculty</th>
                        <th className="text-center p-2">Responses</th>
                        <th className="text-center p-2">Clarity</th>
                        <th className="text-center p-2">Engagement</th>
                        <th className="text-center p-2">Pace</th>
                        <th className="text-center p-2">Interaction</th>
                        <th className="text-center p-2">Confidence</th>
                        <th className="text-center p-2">Overall</th>
                      </tr>
                    </thead>
                    <tbody>
                      {facultyStats.map((stat, idx) => (
                        <tr key={idx} className="border-b">
                          <td className="p-2">{stat.fullName}</td>
                          <td className="text-center p-2">{stat.responses}</td>
                          <td className="text-center p-2">{stat.responses > 0 ? stat.clarity.toFixed(2) : '-'}</td>
                          <td className="text-center p-2">{stat.responses > 0 ? stat.engagement.toFixed(2) : '-'}</td>
                          <td className="text-center p-2">{stat.responses > 0 ? stat.pace.toFixed(2) : '-'}</td>
                          <td className="text-center p-2">{stat.responses > 0 ? stat.interaction.toFixed(2) : '-'}</td>
                          <td className="text-center p-2">{stat.responses > 0 ? stat.confidence.toFixed(2) : '-'}</td>
                          <td className="text-center p-2">
                            <span className={`inline-block px-2 py-1 rounded ${
                              stat.overall >= 4 ? 'bg-green-100 text-green-700' :
                              stat.overall >= 3 ? 'bg-blue-100 text-blue-700' :
                              stat.overall >= 2 ? 'bg-amber-100 text-amber-700' :
                              stat.overall > 0 ? 'bg-red-100 text-red-700' : ''
                            }`}>
                              {stat.responses > 0 ? stat.overall.toFixed(2) : '-'}
                            </span>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </CardContent>
            </Card>
          </div>
        )}
      </div>
    </div>
  );
}
